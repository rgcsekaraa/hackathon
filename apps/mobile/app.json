{
  "expo": {
    "name": "Spatial Voice",
    "slug": "spatial-voice",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "spatialvoice",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0c1222"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.spatialvoice.app",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Spatial Voice uses speech recognition to convert your voice into workspace tasks.",
        "NSMicrophoneUsageDescription": "Spatial Voice uses the microphone for voice input."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0c1222"
      },
      "package": "com.spatialvoice.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
