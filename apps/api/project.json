{
  "name": "api",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run uvicorn main:app --reload --host 0.0.0.0 --port 8000",
        "cwd": "apps/api"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'No build step required for FastAPI'",
        "cwd": "apps/api"
      }
    }
  }
}
